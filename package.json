{
  "name": "snapshot-ui",
  "version": "0.0.2",
  "description": "This repo contains the Mobile and Web Snapshot UI.",
  "main": "index.js",
  "workspaces": [
    "app",
    "storybook"
  ],
  "scripts": {
    "start": "yarn workspace @apartmentsnapshot/snapshot-ui start",
    "start:mock": "yarn workspace @apartmentsnapshot/snapshot-ui start:mock",
    "storybook": "yarn workspace @apartmentsnapshot/snapshot-ui storybook",
    "storybook:native": "yarn workspace @apartmentsnapshot/snapshot-ui-storybook storybook",
    "test": "yarn workspace @apartmentsnapshot/snapshot-ui test",
    "lint": "yarn workspace @apartmentsnapshot/snapshot-ui lint",
    "validate": "yarn workspace @apartmentsnapshot/snapshot-ui validate",
    "prettier": "yarn pretty-quick --no-semi --single-quote",
    "postinstall": "patch-package",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Apartment-Snapshot/snapshot-ui.git"
  },
  "author": "",
  "private": true,
  "bugs": {
    "url": "https://github.com/Apartment-Snapshot/snapshot-ui/issues"
  },
  "homepage": "https://github.com/Apartment-Snapshot/snapshot-ui#readme",
  "devDependencies": {
    "husky": "^7.0.0",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1"
  }
}
