{
  "name": "@apartmentsnapshot/snapshot-ui",
  "version": "0.0.1",
  "main": "__generated__/AppEntry.js",
  "scripts": {
    "start": "yarn setup && APP_ENV=dev expo start -c",
    "start:mock": "yarn setup:mock && APP_ENV=mock expo start -c",
    "android": "yarn setup && expo start --android",
    "android:mock": "yarn setup:mock && expo start --android",
    "ios": "yarn setup && expo start --ios",
    "ios:mock": "yarn setup:mock && expo start --ios",
    "web": "yarn setup && expo start --web",
    "web:mock": "yarn setup:mock && expo start --web",
    "build:web": "expo build:web -c",
    "build:ios": "expo build:ios --no-publish",
    "build:android": "expo build:android --no-publish",
    "lint": "yarn eslint && prettier --check .",
    "lint:fix": "yarn lint --fix . && prettier --config ../.prettierrc.json --write .",
    "prettier:fix": "prettier --config ../.prettierrc.json --write .",
    "lint-ci": "yarn eslint --format junit -o ../reports/lint/js-lint-results.xml",
    "test": "jest --watch",
    "test-ci": "yarn setup && jest --watchAll=false --runInBand --coverage=true  --reporters=default --reporters=jest-junit",
    "validate": "yarn setup && yarn lint-ci && yarn test-ci && yarn build:web && yarn build-storybook",
    "generate": "plop --plopfile ./scripts/plopfile.js",
    "docs": "./scripts/docs",
    "coverage": "yarn test-ci && open ../reports/coverage/lcov-report/index.html",
    "clean": "rimraf .expo/web/cache web-build App.jsx ../reports docs",
    "setup": "yarn clean && cpr App.api.jsx App.jsx -o",
    "setup:mock": "yarn clean && cpr App.mock.jsx App.jsx -o",
    "storybook": "yarn docs && start-storybook -p 7007",
    "storybook:fast": "start-storybook -p 7007",
    "storybook:native": "yarn workspace @apartmentsnapshot/snapshot-ui-storybook storybook",
    "build-storybook": "yarn docs && build-storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "deploy-storybook-ci": "storybook-to-ghpages -- --ci",
    "postinstall": "expo-yarn-workspaces postinstall && cd .. && yarn postinstall"
  },
  "dependencies": {
    "@emotion/native": "^11.0.0",
    "@emotion/react": "^11.4.0",
    "@styled-system/theme-get": "^5.1.2",
    "@thesoulfresh/utils": "^0.3.3",
    "@types/lodash": "^4.14.172",
    "@types/styled-components": "^5.1.12",
    "@types/styled-components-react-native": "^5.1.1",
    "@types/styled-system": "^5.1.12",
    "expo": "~42.0.0",
    "expo-auth-session": "^3.3.1",
    "expo-linear-gradient": "~9.2.0",
    "expo-random": "^11.2.0",
    "expo-status-bar": "~1.0.4",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-native": "https://github.com/expo/react-native/archive/sdk-42.0.0.tar.gz",
    "react-native-iphone-x-helper": "^1.3.1",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-svg": "12.1.1",
    "react-native-web": "0.13.18",
    "styled-components": "^5.3.0",
    "styled-map": "^3.3.0",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@expo/webpack-config": "^0.13.1",
    "@react-native-community/eslint-config": "^3.0.0",
    "@storybook/addon-actions": "^6.3.6",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-links": "^6.3.6",
    "@storybook/react": "^6.3.6",
    "@storybook/storybook-deployer": "^2.8.10",
    "@testing-library/jest-native": "^4.0.1",
    "@testing-library/react-native": "^7.2.0",
    "@types/jest": "^27.0.1",
    "@types/react-native": "~0.63.2",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "babel-plugin-inline-dotenv": "^1.6.0",
    "colors": "^1.4.0",
    "cpr": "^3.0.1",
    "eslint": "^7.31.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-flowtype": "^5.9.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-webpack-plugin": "^3.0.1",
    "expo-cli": "^4.10.0",
    "expo-yarn-workspaces": "^1.5.2",
    "handlebars": "^4.7.7",
    "jest-expo": "^42.0.1",
    "jest-junit": "^12.2.0",
    "lint-staged": "^11.1.2",
    "plop": "^2.7.4",
    "prettier-eslint": "^13.0.0",
    "prettier-eslint-cli": "^5.0.1",
    "react-native-dotenv": "^3.1.1",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "sharp-cli": "^1.15.0",
    "typedoc": "^0.21.6",
    "typescript": "~4.0.0",
    "yargs": "^17.1.1"
  },
  "private": true,
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "./setupTests.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-clone-referenced-element|@react-native-community|expo(nent)?|@expo(nent)?/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|@sentry/.*)"
    ],
    "transform": {
      "^.+\\.[jt]sx?$": "babel-jest"
    },
    "coverageDirectory": "../reports/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/src/assets/",
      "<rootDir>/src/theme/hooks",
      "<rootDir>/src/theme/themes"
    ]
  },
  "jest-junit": {
    "outputDirectory": "../reports/coverage"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn lint:fix",
      "prettier --config ../.prettierrc.json --write"
    ]
  }
}
